{
    "$schema": "https://raw.githubusercontent.com/Mardens-Inc/Apps/main/assets/json/template-schema.json",
    "name": "Demo",
    "description": "This is a demo template",
    "hidden": false,
    "options": [
        {
            "name": "Select",
            "type": "select",
            "options": [
                {
                    "name": "Option 1",
                    "value": "option1"
                },
                {
                    "name": "Option 2",
                    "value": "option2"
                },
                {
                    "name": "Option 3",
                    "value": "option3"
                }
            ],
            "default": "option1",
            "description": "Select an option"
        },
        {
            "name": "Text",
            "type": "text",
            "default": "Hello World",
            "description": "Enter some text"
        },
        {
            "name": "Number",
            "type": "number",
            "default": 1,
            "description": "Enter a number"
        },
        {
            "name": "Date",
            "type": "date",
            "default": "2019-01-01",
            "description": "Select a date"
        },
        {
            "name": "Time",
            "type": "time",
            "default": "12:00",
            "description": "Select a time"
        },
        {
            "name": "Datetime",
            "type": "datetime",
            "default": "2019-01-01T12:00",
            "description": "Select a datetime"
        },
        {
            "name": "Textarea",
            "type": "textarea",
            "default": "Hello World",
            "description": "Enter some text"
        },
        {
            "name": "Array",
            "type": "array",
            "description": "Enter an array of strings",
            "default": [
                "Hello",
                "World"
            ]
        },
        {
            "name": "Color",
            "type": "color",
            "default": "#ff0000",
            "description": "Select a color"
        },
        {
            "name": "File",
            "type": "file",
            "extensions": [
                ".jpg",
                ".png"
            ],
            "multiple": true,
            "description": "Upload a file"
        },
        {
            "name": "Toggle",
            "type": "boolean",
            "default": true,
            "description": "Toggle on/off"
        }
    ]
}